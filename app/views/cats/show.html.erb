<% unless @result.empty? %>
<p>
Best price for your location
- <%= @result.first.price %>
</p>

<table class=" table table-striped">
  <thead>
  <tr>
    <th>Type</th>
    <th>Price</th>
    <th>Location</th>
    <th>Image</th>
  </tr>
  </thead>
  <tbody>
    <% @result.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
      <td><%= cat.price %></td>
      <td><%= cat.location %></td>
      <td><%= image_tag(cat.image, width: '150px') %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>
    Sorry, no cats for your location
  </p>
<% end %>
